import string

alphabet_string = string.ascii_lowercase

#Create a string of all lowercase letters

alphabet_list = list(alphabet_string)

n=37
for i in range(0,n):
    # nested loop
    pos=i
    for j in range(0,i+1):
        # display number
        cnt=pos+j
        if cnt > len(alphabet_list)-1:
          print('*',end=' ')
        else:         
          print(alphabet_list[cnt], end=' ')
          #print(cnt)
    print()
